<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property file="./launcher.properties" />

    <property name="LOG_DIR" value="${logging.dir:-logs}" />
    <property name="LOG_LEVEL" value="${logging.level:-INFO}" />
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n" />

    <!-- Appender for launcher itself -->
    <appender name="LAUNCHER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/launcher.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${LOG_DIR}/launcher.%i.log</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>1</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>10MB</maxFileSize>
        </triggeringPolicy>
    </appender>

    <!-- Per-process appender via MDC['process'] -->
    <siftingAppender name="PROCESS_SIFT" class="ch.qos.logback.classic.sift.SiftingAppender">
        <discriminator class="ch.qos.logback.classic.sift.MDCBasedDiscriminator">
            <key>process</key>
            <defaultValue>unknown</defaultValue>
        </discriminator>
        <sift>
            <appender name="PROCESS-${process}" class="ch.qos.logback.core.rolling.RollingFileAppender">
                <file>${LOG_DIR}/${process}.log</file>
                <encoder>
                    <pattern>${LOG_PATTERN}</pattern>
                    <charset>UTF-8</charset>
                </encoder>
                <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
                    <fileNamePattern>${LOG_DIR}/${process}.%i.log</fileNamePattern>
                    <minIndex>1</minIndex>
                    <maxIndex>1</maxIndex>
                </rollingPolicy>
                <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
                    <maxFileSize>10MB</maxFileSize>
                </triggeringPolicy>
            </appender>
        </sift>
    </siftingAppender>

    <!-- Launcher package goes only to its appender -->
    <logger name="com.puhovin.lampalauncher" level="${LOG_LEVEL}" additivity="false">
        <appender-ref ref="LAUNCHER" />
    </logger>

    <!-- Root only routes child processes -->
    <root level="${LOG_LEVEL}">
        <appender-ref ref="PROCESS_SIFT" />
    </root>
</configuration>
