<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property file="launcher.properties" />

    <property name="LOG_DIR" value="${logging.dir:-logs}" />
    <property name="LOG_LEVEL" value="${logging.level:-INFO}" />
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n" />

    <appender name="LAUNCHER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/launcher.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/launcher.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <appender name="TORRSERVER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/torrserver.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/torrserver.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <appender name="LAMPA" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/lampa.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/lampa.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <logger name="com.puhovin.lampalauncher" level="${LOG_LEVEL}" additivity="false">
        <appender-ref ref="LAUNCHER" />
    </logger>

    <logger name="process.torrserver" level="${LOG_LEVEL}" additivity="false">
        <appender-ref ref="TORRSERVER" />
    </logger>

    <logger name="process.lampa" level="${LOG_LEVEL}" additivity="false">
        <appender-ref ref="LAMPA" />
    </logger>

    <root level="WARN">
        <appender-ref ref="LAUNCHER" />
    </root>

</configuration>
